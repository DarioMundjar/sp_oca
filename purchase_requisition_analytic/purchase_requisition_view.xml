<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

#---------------------------------------------------------------------------------------------------------
#   Add analytic account id to purchase requisitions
#---------------------------------------------------------------------------------------------------------        

    <record id="view_purchase_requisition_filter" model="ir.ui.view">
        <field name="name">purchase.requisition.list.select</field>
        <field name="model">purchase.requisition</field>
        <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_filter"/>
        <field name="arch" type="xml">
			<xpath expr="//search//field[@name='name']" position="after">
				<field name="account_analytic_ids" groups="purchase.group_analytic_accounting"/>
				<field name="account_analytic_user_ids" groups="purchase.group_analytic_accounting"/>
			</xpath>
		</field>
	</record>		

    <record model="ir.ui.view" id="view_purchase_requisition_form_project">
        <field name="name">purchase.requisition.form.project</field>
        <field name="model">purchase.requisition</field>
        <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
        <field name="arch" type="xml">
			<xpath expr="//form/sheet/notebook/page//field[@name='line_ids']/tree//field[@name='product_id']" position="before">
				<field name="account_analytic_id" groups="purchase.group_analytic_accounting"/>
				<field name="account_analytic_user_id" groups="purchase.group_analytic_accounting"/>
			</xpath>
			<xpath expr="//form/sheet/notebook/page//field[@name='line_ids']/form//field[@name='product_id']" position="before">
				<field name="account_analytic_id" groups="purchase.group_analytic_accounting"/>
				<field name="account_analytic_user_id" readonly="1" groups="purchase.group_analytic_accounting"/>
			</xpath>
		</field>
    </record>

	<record model="ir.ui.view" id="view_purchase_requisition_line_tree">
        <field name="name">purchase.requisition.line.tree</field>
        <field name="type">tree</field>
        <field name="model">purchase.requisition.line</field>        
        <field name="arch" type="xml">
        	<tree string="Requisition Lines" create="false">
        		<field name="requisition_id"/>
        		<field name="requisition_name"/>
        		<field name="requisition_state"/>
        		<field name="account_analytic_id" groups="purchase.group_analytic_accounting"/>
        		<field name="account_analytic_user_id" groups="purchase.group_analytic_accounting"/>
                <field name="product_id" on_change="onchange_product_id(product_id,product_uom_id)"/>
                <field name="product_qty"/>
                <field name="product_uom_id" groups="product.group_uom"/>        		
        	</tree>
        </field>
	</record>   

	<record model="ir.ui.view" id="view_purchase_requisition_line_form">
        <field name="name">purchase.requisition.line.form</field>
        <field name="type">form</field>
        <field name="model">purchase.requisition.line</field>        
        <field name="arch" type="xml">
        	<form string="Requisition Lines" create="false">
        		<field name="requisition_id"/>
        		<field name="requisition_name"/>
        		<field name="requisition_state"/>
        		<field name="account_analytic_id" groups="purchase.group_analytic_accounting"/>
        		<field name="account_analytic_user_id" groups="purchase.group_analytic_accounting"/>
                <field name="product_id" on_change="onchange_product_id(product_id,product_uom_id)"/>
                <field name="product_qty"/>
                <field name="product_uom_id" groups="product.group_uom"/>        		
        	</form>
        </field>
	</record>   

    <record id="view_purchase_requisition_line_filter" model="ir.ui.view">
        <field name="name">purchase.requisition.line.list.select</field>
        <field name="model">purchase.requisition.line</field>
        <field name="arch" type="xml">
            <search string="Search Purchase Requisition Lines">
                <field name="requisition_id"/>
                <field name="requisition_name"/>
                <field name="requisition_state"/>                    
                <field name="account_analytic_id" groups="purchase.group_analytic_accounting"/>
                <field name="account_analytic_user_id" groups="purchase.group_analytic_accounting"/>
            	<field name="product_id"/>                    
            </search>
        </field>
    </record>
	

    <record model="ir.actions.act_window" id="action_purchase_requisition_line">
        <field name="name">Purchase Requisition Lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.requisition.line</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"search_default_user_id":uid}</field>
        <field name="search_view_id" ref="view_purchase_requisition_line_filter"/>
    </record>

    <menuitem
        id="menu_purchase_requisition_line"
        sequence="10"
        parent="purchase.menu_procurement_management"
        action="action_purchase_requisition_line"/>


    </data>
</openerp>
